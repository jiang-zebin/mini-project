.cart-header{
  border-bottom:1rpx solid #eee;
}
.district-info{
  display:flex;
  justify-content:space-between;
  padding:10rpx;
}
.cart-item{
  display:flex;
  align-items:center;
  background-color:#F6F7F9;
  padding:30rpx;
}
.item-info{
  display:flex;
  align-items:center;
  padding-left:30rpx;
}
.item-img{
  width:245rpx;
  height:125rpx;
  margin-right:30rpx;
}
.item-detail{
  display:flex;
  flex-direction:column;
}
.item-title{
  font-size:18px;
  color:#3A4246;
  margin-bottom:20rpx;
}
.item-price{
  display:flex;
  align-items:center;
}
.item-price image{
  width:32rpx;
  height:32rpx;
  margin-right:10rpx;
}
.item-price image:nth-child(3){
  margin-left:30rpx;
}
.item-price text{
  font-size:16px;
  color:#A08660;
}
.sum-box{
  position:fixed;
  bottom:0;
  display:flex;
  align-items:center;
  width:100%;
  height:100rpx;
}
.checkall{
  display:flex;
  align-items:center;
  width:30%;
  height:100rpx;
  padding-left:20rpx;
}
.checkall text{
  margin-left:20rpx;
}
.sum-price{
  display:flex;
  justify-content:flex-end;
  align-items:center;
  width:45%;
  height:100rpx;
  padding-right:20rpx;
}
.sum-btn{
  display:flex;
  justify-content:center;
  align-items:center;
  width:25%;
  background-image:linear-gradient(to right,#B1384C,#F24B31);
  height:100rpx;
  color:#fff;
}