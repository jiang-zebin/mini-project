<view class="search-box">
  <input class="search-input" placeholder="请输入您想查找的商品"></input>
  <image src="/assets/icon/search_icon@2x.png" mode="aspectFill" class="search-icon"/>
</view>
<swiper previous-margin="50rpx" next-margin="50rpx" circular="{{true}}" autoplay interval="4000" duration="700" indicator-dots="{{true}}" indicator-color="#666" indicator-active-color="white" class="shop-swiper">
  <swiper-item class="swiper-item">
    <image src="http://ossweb-img.qq.com/images/lol/web201310/skin/big157001.jpg" mode="aspectFill" lazy-load/>
  </swiper-item>
  <swiper-item class="swiper-item">
    <image src="http://ossweb-img.qq.com/images/lol/web201310/skin/big157002.jpg" mode="aspectFill" lazy-load/>
  </swiper-item>
  <swiper-item class="swiper-item">
    <image src="http://ossweb-img.qq.com/images/lol/web201310/skin/big157003.jpg" mode="aspectFill" lazy-load/>
  </swiper-item>
  <swiper-item class="swiper-item">
    <image src="http://ossweb-img.qq.com/images/lol/web201310/skin/big157009.jpg" mode="aspectFill" lazy-load/>
  </swiper-item>
</swiper>
<view class="product-nav">
  <navigator class="product-item" url="{{'/pages/product/product?type='+item.type}}">
    <image src="/assets/icon/mobile_store_func_hero_mark@2x.png" mode="aspectFill" lazy-load/>
    <text>英雄</text>
  </navigator>
  <navigator class="product-item" url="{{'/pages/product/product?type='+item.type}}">
    <image src="/assets/icon/mobile_store_func_skin_mark@2x.png" mode="aspectFill" lazy-load/>
    <text>皮肤</text>
  </navigator>
  <navigator class="product-item" url="{{'/pages/product/product?type='+item.type}}">
    <image src="/assets/icon/mobile_store_func_guard_mark@2x.png" mode="aspectFill" lazy-load/>
    <text>守卫/图标</text>
  </navigator>
  <navigator class="product-item" url="{{'/pages/product/product?type='+item.type}}">
    <image src="/assets/icon/mobile_store_func_gift_mark@2x.png" mode="aspectFill" lazy-load/>
    <text>礼包</text>
  </navigator>
  <navigator class="product-item" url="{{'/pages/product/product?type='+item.type}}">
    <image src="/assets/icon/mobile_store_func_periphery@2x.png" mode="aspectFill" lazy-load/>
    <text>周边</text>
  </navigator>
</view>
<view class="underline"></view>
<view class="box-title arrow">最新上架</view>
<view class="news-box">
  <navigator class="news-left" url="{{'/pages/detail/detail?id='+item.id}}">
    <image src="http://ossweb-img.qq.com/images/lol/web201310/skin/big92003.jpg" mode="aspectFill" lazy-load/>
    <view class="left-info">
      <image src="/assets/icon/mobile_store_price_color_three@2x.png" mode="aspectFill" lazy-load/>
      <text>9900</text>
    </view>
    <view class="left-info-title">兔女郎 锐雯</view>
  </navigator>
  <view class="news-right">
    <navigator class="right-up" url="{{'/pages/detail/detail?id='+item.id}}">
      <image src="http://ossweb-img.qq.com/images/lol/web201310/skin/big92004.jpg" mode="aspectFill" lazy-load/>
      <view class="right-info">
        <image src="/assets/icon/mobile_store_price_color_three@2x.png" mode="aspectFill" lazy-load/>
        <text>12900</text>
      </view>
      <view class="right-info-title">冠军之刃 锐雯</view>
    </navigator>
    <navigator class="right-down" url="{{'/pages/detail/detail?id='+item.id}}">
      <image src="http://ossweb-img.qq.com/images/lol/web201310/skin/big238001.jpg" mode="aspectFill" lazy-load/>
      <view class="right-info">
        <image src="/assets/icon/mobile_store_price_color_three@2x.png" mode="aspectFill" lazy-load/>
        <text>6900</text>
      </view>
      <view class="right-info-title">冲击之刃 劫</view>
    </navigator>
  </view>
</view>
<view class="underline"></view>
<view class="box-title arrow">推荐英雄</view>
<view class="recom-box">
  <navigator wx:for="{{heroList}}" class="recom-item" url="{{'/pages/detail/detail?pid='+item.pid}}" wx:key="{{index}}">
    <image src="{{item.img_url}}" mode="aspectFill" lazy-load/>
    <view class="recom-info">
      <text class="recom-title">{{item.pname}}</text>
      <view class="recom-price">
        <image src="/assets/icon/mobile_store_price_color_three@2x.png" mode="aspectFill" lazy-load />
        <text>{{item.price}}</text>
        <image src="/assets/icon/moblie_store_blue_essence_dark@2x.png" mode="aspectFill" lazy-load />
        <text>{{item.game_currency}}</text>
      </view>
    </view>
  </navigator>
</view>
<view class="underline"></view>
<view class="box-title arrow">推荐皮肤</view>
<view class="recom-box">
  <navigator wx:for="{{skinList}}" class="recom-item" url="{{'/pages/detail/detail?pid='+item.pid}}" wx:key="{{index}}">
    <image src="{{item.img_url}}" mode="aspectFill" lazy-load/>
    <view class="recom-info">
      <text class="recom-title">{{item.pname}}</text>
      <view class="recom-price">
        <image src="/assets/icon/mobile_store_price_color_three@2x.png" mode="aspectFill" lazy-load />
        <text>{{item.price}}</text>
      </view>
    </view>
  </navigator>
</view>